# File: .env
# Environment variables for FE-AI system
# IMPORTANT: Change all passwords and secrets in production!

# Application Settings
NODE_ENV=development
DEBUG=false
SECRET_KEY=fe-ai-super-secret-key-change-in-production-very-long-key-here
JWT_SECRET=jwt-secret-key-for-authentication-change-this-in-production

# Database Configuration
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USER=feai_user
MONGO_PASSWORD=secure_mongo_password_123_change_in_production
MONGO_ADMIN_USER=admin
MONGO_ADMIN_PASSWORD=admin_secure_password_456_change_in_production
